<div class="max-w-5xl mx-auto px-2 my-16">
<h2 class="text-7xl font-semibold text-center mt-2 mb-1 pt-2 py-1">新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field text-2xl">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "w-full border border-x-black border-y-black"  %>
  </div>

  <div class="field text-2xl">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email", class: "w-full border border-x-black border-y-black"%>
  </div>

  <div class="field text-2xl">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "w-full border border-x-black border-y-black" %>
  </div>

  <div class="field text-2xl">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "w-full border border-x-black border-y-black"%>
  </div>

  <div class="actions">
    <%= f.submit "登録", class: "text-3xl text-black bg-green my-10 px-5 py-2 rounded-md" %>
  </div>

  <% end %>
</div>
